<div class="holder">
    <div class="bloque">
        <h2>Agregar una nueva novedad</h2>
        <form action="/admin/novedades/agregar" method="post">
        <div class="login">
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" id="titulo" placeholder="Titulo">

            <label for="subtitulo">Subtítulo:</label>
            <input type="text" name="subtitulo" id="subtitulo" placeholder="Subtitulo">

            <label for="cuerpo">Cuerpo:</label>
            <input type="text" name="cuerpo" id="cuerpo" placeholder="Cuerpo">

            <button type="submit" class="ingresar">Guardar</button>
        </div>
        </form>
        {{#if error}}
            <p>{{message}}</p>
        {{/if}}
    </div>
</div>